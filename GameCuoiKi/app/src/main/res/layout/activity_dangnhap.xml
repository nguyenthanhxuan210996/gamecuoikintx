<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_nen">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/linearLayout3">
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Email hoặc SĐT"
            android:id="@+id/edEmail21"
            android:background="#ffffff"
            android:layout_weight="1"
            android:textColorHint="#97c111"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:background="#ffffff"
            android:id="@+id/edMatKhau21"
            android:layout_marginTop="20dp"
            android:textColorHint="#97c111"/>
    </LinearLayout>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDangNhap21"
        android:text="Đăng nhập"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:background="#97c111"/>
    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Nếu bạn chưa có tài khoản, đăng ký mới"
        android:layout_below="@+id/btnDangNhap21"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="tại đây"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/tv21"
        android:textColor="#997777"/>

</RelativeLayout>